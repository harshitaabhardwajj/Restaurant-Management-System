@model List<ManagementSystem1.Models.MenuItem>

@{
    ViewData["Title"] = "Menu";
}

<h2 class="text-center text-success">🍽️ Restaurant Menu</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="AddMenuItem" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Item</a>
</div>

<table class="table table-hover table-bordered">
    <thead class="bg-dark text-light">
        <tr>
            <th>Name</th>
            <th>Price ($)</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td class="text-center">
                        <a asp-action="DeleteMenuItem" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this item?');">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center text-danger">No menu items found.</td>
            </tr>
        }
    </tbody>
</table>

<style>
    .bg-dark {
        background-color: #343a40;
    }

    .btn-primary {
        background-color: #28a745;
        border: none;
    }

        .btn-primary:hover {
            background-color: #218838;
        }
</style>
