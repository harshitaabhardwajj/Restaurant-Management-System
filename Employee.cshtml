@model List<ManagementSystem1.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2 class="text-center text-success">🍽️ Employee List</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="AddEmployee" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Employee</a>
</div>

<table class="table table-hover table-bordered">
    <thead class="bg-dark text-light">
        <tr>
            <th>Name</th>
            <th>Designation</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Name</td>
                    <td>@emp.Designation</td>
                    <td class="text-center">
                        <a asp-action="DeleteEmployee" asp-route-id="@emp.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this employee?');">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center text-danger">No employees found.</td>
            </tr>
        }
    </tbody>
</table>

<style>
    .bg-dark {
        background-color: #343a40;
    }

    .btn-primary {
        background-color: #28a745;
        border: none;
    }

        .btn-primary:hover {
            background-color: #218838;
        }
</style>

