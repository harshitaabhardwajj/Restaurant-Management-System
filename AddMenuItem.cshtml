@model ManagementSystem1.Models.MenuItem

@{
    ViewData["Title"] = "Add New Menu Item";
}

<h2>Add New Menu Item</h2>

<form asp-action="AddMenuItem" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Add Item</button>
    <a asp-action="Index" class="btn btn-secondary">Back to Menu</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
